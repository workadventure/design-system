{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "moduleResolution": "Node",
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}